rules_version = '2';
service cloud.firestore {
match /databases/{database}/documents {
match /animal/{animalId} {
    allow read: if true; 
    allow write: if true; 
}
match /grocerylist/{grocerylistid} {
    function readIfHelper (request, resource) {
        let isOwner = request.auth.uid == resource.data.id;
        let isMember = request.auth.token.memberOf == resource.data.id;
        return isOwner || isMember;
    }
    // TODO: Check invitation
    function createIfHelper (request) {
        let doc = request.resource.data;
        let auth = request.auth;
        let isOwner = auth.uid == doc.id;
        let isVersion1 = doc.version == '1';
        let createdNow = doc.createdOn == request.time;
        let ownerIdMatches = doc.owner.uid == auth.uid;
        let ownerNameMatches = doc.get(["owner", "name"], -1) == auth.get(["token", "name"], -1);
        let ownerEmailAddressMatches = 
        doc.get(["owner", "email", "address"], -1) ==
            auth.get(["token", "email"], -1);
        let ownerEmailVerifiedMatches = 
        doc.get(["owner", "email", "verified"], -1) ==
            auth.get(["token", "email_verified"], -1);
        let membersEmpty = doc.members.size() == 0;
        return (isOwner &&
            isVersion1 &&
            createdNow &&
            ownerIdMatches &&
            ownerNameMatches &&
            ownerEmailAddressMatches &&
            ownerEmailVerifiedMatches &&
            membersEmpty);
    }
    allow create: if createIfHelper(request);
    allow read: if readIfHelper(request, resource);
    // Allow through cloud function or another approach
    allow update: if false; 
    // Allow through cloud function or another approach
    allow delete: if false; 
}
match /invitation/{invitationId} {
// TODO Validate password
    allow create: if request.auth != null &&
            request.resource.data.owner.uid == request.auth.uid &&
            request.resource.data.version == '1' &&
            request.resource.data.createdOn == request.time &&
            request.resource.data.get(["owner", "email", "address"], -1) ==
                request.auth.get(["token", "email"], -1) &&
            request.resource.data.get(["owner", "email", "verified"], -1) ==
                request.auth.get(["token", "email_verified"], -1) &&
            request.resource.data.get(["owner", "name"], -1) ==
                request.auth.get(["token", "name"], -1);
    allow update: if false; 
    allow delete: if request.auth.uid == resource.data.owner.uid;
    allow list: if request.auth.uid == resource.data.owner.uid;
    allow get: if request.auth != null &&
            request.auth.token.firebase.sign_in_provider != 'anonymous';
}
}}